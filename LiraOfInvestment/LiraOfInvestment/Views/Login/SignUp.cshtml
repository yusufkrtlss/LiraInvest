@model SignUpViewModel

@{
    ViewData["Title"] = "Sign Up";
    Layout = null;
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="~/LiraOfInvestment.styles.css" asp-append-version="true"/>

<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }

        .img {
            max-width: 991.98px;
            margin-right: 0;
        }
    </style>

    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="fw-bold mb-5">Sign up now</h2>
                      
                        @using (Html.BeginForm("SignUp", "Login", FormMethod.Post))
                        {
                                 <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="form-outline mb-4">
                                <label for="FirstName" class="control-label">FirstName</label>
                                @Html.TextBoxFor(x=>x.FirstName, new{@class="form-control"})
                                @Html.ValidationMessageFor(x=>x.FirstName,"" , new{@class="text-danger"})


                            </div>
                            <div class="form-outline mb-4">
                                <label for="LastName" class="control-label">LastName</label>
                                @Html.TextBoxFor(x=>x.LastName, new{@class="form-control"})
                                @Html.ValidationMessageFor(x=>x.LastName,"" , new{@class="text-danger"})


                            </div>

                            <div class="form-outline mb-4">
                                <label for="UserName" class="control-label">Username</label>
                                @Html.TextBoxFor(x=>x.UserName, new{@class="form-control"})
                                @Html.ValidationMessageFor(x=>x.UserName,"" , new{@class="text-danger"})


                            </div>
                            <div class="form-outline mb-4">
                                <label for="Mail" class="control-label">E-Mail</label>
                                @Html.TextBoxFor(x=>x.Mail,new{@class="form-control"})
                                @Html.ValidationMessageFor(x=>x.Mail,"" , new{@class="text-danger"} )
                            </div>
                            <div class="form-outline mb-4">
                                <label for="Phone" class="control-label">Phone</label>
                                @Html.TextBoxFor(x=>x.Phone,new{@class="form-control" , @type="phone"})
                                @Html.ValidationMessageFor(x=>x.Phone,"" , new{@class="text-danger"} )
                            </div>

                            <div class="form-outline mb-4">
                                <label for="Password" class="control-label">Password</label>
                                @Html.TextBoxFor(x=>x.Password,new{@class="form-control" , @type="password"})
                                @Html.ValidationMessageFor(x=>x.Password,"" , new{@class="text-danger"} )

                            </div>
                            <div class="form-outline mb-4">
                                <label for="Password" class="control-label">Confirm Password</label>
                                @Html.TextBoxFor(x=>x.ConfirmPassword,new{@class="form-control" , @type="password"})
                                @Html.ValidationMessageFor(x=>x.ConfirmPassword,"" , new{@class="text-danger"} )

                            </div>
                            <div class="pt-2 pb-2">
                                <button type="submit" class="btn btn-primary btn-block mb-4 btnSumbit" value="">Register</button>
                            </div>
                        }
                    </div>
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                </div>
            </div>
        

        <div class="col-lg-6 mb-5 mb-lg-0 img">
            <img src="~/SignInImage.jpg" class="w-100 rounded-4 shadow-4"
                 alt="" />
        </div>
        
    </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->
<script src="/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script src="/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery/dist/jquery.js"></script>